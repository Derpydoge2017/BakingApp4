<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/ingredient_name"
        android:layout_width="wrap_content"
        android:textSize="15sp"
        tools:text="@string/placeholder_ingredientName"
        android:layout_marginRight="80px"
        android:layout_height="wrap_content"
        />


    <TextView
        android:id="@+id/ingredient_measure"
        android:layout_width="wrap_content"
        android:textSize="15sp"
        tools:text="@string/placeholder_ingredientMeasure"
        android:layout_toRightOf="@id/ingredient_name"
        android:layout_marginRight="80px"
        android:layout_height="wrap_content"
        />


    <TextView
        android:id="@+id/ingredient_quantity"
        android:layout_width="wrap_content"
        android:textSize="15sp"
        tools:text="@string/placeholder_ingredientQuantity"
        android:layout_toRightOf="@id/ingredient_measure"
        android:layout_height="wrap_content"
        />

</RelativeLayout>